{
	"method" : "post",
	"id" : "dbUpload",
	"action" : "/import/submit",
	"class" : "form-horizontal",
	"enctype" : "multipart/form-data",
	"elements" : 
	[
		{	"type" : "text",
			"name" : "separator",
			"value" : ";",
			"validators" : 
			[ 
				"required"
			]
		},
		{	"type" : "select",
			"name" : "select_carriagereturn",
			"children" :
			[
				{ "type" : "option",
					"value" : "LF",
					"label" : "LF (Unix)"
				},
				{ "type" : "option",
					"value" : "CR",
					"label" : "CR (Mac/Windows)",
					"selected" : "selected"
				},
				{ "type" : "option",
					"value" : "CRLF",
					"label" : "CRLF (w3c)"
				}
			]	
		},
		{	"type" : "select",
			"name" : "select_encoding",
			"children" :
			[
				{ "type" : "option",
					"value" : "latin1",
					"label" : "ISO-8859-15 (latin1)"
				},
				{ "type" : "option",
					"value" : "utf8",
					"label" : "UTF-8",
					"selected" : "selected"
				},
				{ "type" : "option",
					"value" : "mac",
					"label" : "Mac"
				}
			]	
		},
		{	"type" : "select",
			"name" : "select_lang",
			"children" :
			[
				{ "type" : "option",
					"value" : "fr",
					"label" : "Fran√ßais"
				},
				{ "type" : "option",
					"value" : "de",
					"label" : "Allemand"
				}
			]	
		},
		{	"type" : "text",
			"name" : "skipline",
			"value" : 1,
			"validators" : 
			[ 
				"validate-integer"
			]
		},
		{	"type" : "file",
			"name" : "dbfile",
			"validators" : 
			[ 
				"required"
			]
		},
		{	"type" : "submit",
			"name" : "submit",
			"class" : "btn btn-primary",
			"value" : "Submit"
		}
	]
}
