{
	"method" : "post",
	"id" : "dbUpload",
	"action" : "/import/submit",
	"class" : "form-horizontal",
	"enctype" : "multipart/form-data",
	"elements" : 
	[
		{	"type" : "textarea",
			"name" : "description",
			"value" : "",
			"class" : "import-db-description"
		},
		{	"type" : "textarea",
			"name" : "description_de",
			"value" : "",
			"class" : "import-db-description"
		},
		{	"type" : "text",
			"name" : "separator",
			"value" : ";",
			"validators" : 
			[ 
				"required"
			]
		},
		{	"type" : "text",
			"name" : "enclosure",
			"value" : "\"",
			"validators" : 
			[ 
				"required"
			]
		},
		{	"type" : "select",
			"name" : "select_lang",
			"children" :
			[
				{ "type" : "option",
					"value" : "fr",
					"label" : "Français"
				},
				{ "type" : "option",
					"value" : "de",
					"label" : "Allemand"
				}
			]	
		},
		{	"type" : "text",
			"name" : "skipline",
			"value" : 1,
			"validators" : 
			[ 
				"validate-integer"
			]
		},
		{	"type" : "select",
			"name" : "select_type",
			"children" :
			[
				{ "type" : "option",
					"value" : "inventory",
					"label" : "Inventaire"
				},
				{ "type" : "option",
					"value" : "research",
					"label" : "Research"
				}
			]	
		},
		{	"type" : "select",
			"name" : "select_scale_resolution",
			"children" :
			[
				{ "type" : "option",
					"value" : "site",
					"label" : "Site"
				},
				{ "type" : "option",
					"value" : "watershed",
					"label" : "Bassin versant"
				},
				{ "type" : "option",
					"value" : "microregion",
					"label" : "Micro-région"
				},
				{ "type" : "option",
					"value" : "region",
					"label" : "Région"
				},
				{ "type" : "option",
					"value" : "country",
					"label" : "Country"
				},
				{ "type" : "option",
					"value" : "europa",
					"label" : "Europe"
				}
			]	
		},
		{	"type" : "text",
			"name" : "declared_modification",
			"value" : ""
		},
		{	"type" : "textarea",
			"name" : "geographical_limit",
			"value" : "",
			"class" : "import-db-description"
		},
		{	"type" : "textarea",
			"name" : "geographical_limit_de",
			"value" : "",
			"class" : "import-db-description"
		},
		{	"type" : "file",
			"name" : "dbfile",
			"validators" : 
			[ 
				"required"
			]
		},
		{	"type" : "submit",
			"id" : "submit",
			"name" : "submit",
			"class" : "btn btn-primary",
			"value" : "Submit",
			"disabled" : "disabled"
		}
	]
}
